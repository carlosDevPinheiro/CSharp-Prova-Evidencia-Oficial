<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProvaEvidencia.Views.NewCategoriaPage">

    
    <StackLayout>
        <Label Text="Nome" TextColor="Red" FontSize="Medium"/>
        <Entry Text="{Binding Name}" />

        <Label Text="Telefone" TextColor="Red" FontSize="Medium"/>
        <Entry Text="{Binding Detalhes}" />

        <Button Text="Adicionar" Command="{Binding AddCategoriaCommand}" />

    </StackLayout>
</ContentPage>